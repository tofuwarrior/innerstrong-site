{% extends "layouts/base.njk" %}
{% block content %}
  {# Map front matter fields to the variables hero.njk expects #}
  {% set title = hero_title %}
  {% set subtitle = hero_sub %}
  {% set cta_href = hero_cta_href %}
  {% set cta_label = hero_cta_label %}
  {% set display_secondary = hero_display_secondary %}

  {% include "partials/hero.njk" %}

  <section class="wrapper">
    <div class="inner">
      {{ content | safe }}
    </div>
  </section>
{% endblock %}
